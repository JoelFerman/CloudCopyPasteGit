        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_marginLeft="70dp"/>-->

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnHeaderRight"
        android:background="@drawable/ic_exit_to_app"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="95dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnHeaderDownload"
        android:layout_below="@+id/header"
        android:src="@drawable/ic_cloud_download"
        android:tint="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnHeaderUpload"
        android:src="@drawable/ic_cloud_upload"
        android:tint="#000000"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLink1"
        android:layout_below="@+id/header"
        android:layout_marginTop="50dp">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtLink1"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/copyLink1"
        android:text="Copy"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@drawable/link_button_pressed"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pasteLink1"
        android:text="Paste"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@drawable/link_button_pressed"
        android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLink2"
        android:layout_below="@+id/linearLink1"
        android:layout_marginTop="50dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLink2"
