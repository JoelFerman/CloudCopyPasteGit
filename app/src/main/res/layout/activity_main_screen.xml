            android:id="@+id/pasteLink3"
            android:text="Paste"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@drawable/link_button_pressed"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLink4"
        android:layout_below="@+id/linearLink3"
        android:layout_marginTop="50dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLink4"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/copyLink4"
            android:text="Copy"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@drawable/link_button_pressed"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pasteLink4"
            android:text="Paste"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@drawable/link_button_pressed"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLink5"
        android:layout_below="@+id/linearLink4"
        android:layout_marginTop="50dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLink5"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/copyLink5"
