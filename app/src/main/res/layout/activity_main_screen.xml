<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="yaxstudio.com.cloudcopypaste.MainScreenActivity">

    <include layout="@layout/header" android:id="@+id/header"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHeaderTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="105dp"
        android:text="Main Screen"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnHeaderRight"
        android:background="@drawable/ic_exit_to_app"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnDownload"
        android:layout_below="@+id/header"
        android:src="@drawable/ic_cloud_download"
        android:tint="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblContentDownload"
        android:text="Download"
        android:textStyle="bold"
        android:textSize="10dp"
        android:layout_below="@+id/btnDownload"
        android:layout_marginLeft="35dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnUpload"
        android:src="@drawable/ic_cloud_upload"
        android:tint="#000000"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/btnDownload"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblContentUpload"
        android:text="Upload"
        android:textStyle="bold"
        android:textSize="10dp"
        android:layout_below="@+id/btnUpload"
        android:layout_marginLeft="120dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnCopy"
        android:src="@drawable/ic_content_copy"
        android:tint="#000000"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/btnPaste"
        android:layout_marginRight="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblContentCopy"
        android:text="Copy"
        android:textStyle="bold"
        android:textSize="10dp"
        android:layout_below="@+id/btnCopy"
        android:layout_alignParentRight="true"
        android:layout_marginRight="119dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnPaste"
        android:src="@drawable/ic_content_paste"
        android:tint="#000000"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblContentPaste"
        android:text="Paste"
        android:textStyle="bold"
        android:textSize="10dp"
        android:layout_below="@+id/btnPaste"
        android:layout_alignParentRight="true"
        android:layout_marginRight="37dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtLink1"
        android:singleLine="true"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtLink2"
        android:singleLine="true"
        android:layout_below="@id/txtLink1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtLink3"
        android:singleLine="true"
        android:layout_below="@id/txtLink2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtLink4"
        android:singleLine="true"
        android:layout_below="@id/txtLink3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtLink5"
        android:singleLine="true"
        android:layout_below="@id/txtLink4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
